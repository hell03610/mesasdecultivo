extends partial/layout.pug

mixin rightCaret
  svg(class="right-caret" viewBox="0 0 574 1024")
    path(d="M10 9Q0 19 0 32t10 23l482 457L10 969Q0 979 0 992t10 23q10 9 24 9t24-9l506-480q10-10 10-23t-10-23L58 9Q48 0 34 0T10 9z")

mixin leftCaret
  svg(class="left-caret" viewBox="0 0 574 1024")
    path(d="M564 9q10 10 10 23t-10 23L82 512l482 457q10 10 10 23t-10 23q-10 9-24 9t-24-9L10 535Q0 525 0 512t10-23L516 9q10-9 24-9t24 9z")

block content
  section.possibility
    article
      section.meta !{list_categories(page.categories)} | #{date(page.date, 'DD/MM')}

      header
        h1= page.title
      section !{page.content}

    section.pagination
      h2.pagination-prev
        if page.prev
          a(href= url_for(page.prev.path))
            +leftCaret
            span= page.prev.title
      h2.pagination-next
        if page.next
          a(href= url_for(page.next.path))
            span= page.next.title
            +rightCaret
